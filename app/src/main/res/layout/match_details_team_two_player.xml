<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#272639">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewPlayer"
        app:layout_constraintBottom_toTopOf="@id/textViewRealName"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Fallen" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewRealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/imageViewPlayer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#6C6B7E"
        android:textSize="12sp"
        android:text="Gabriel Toledo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewPlayer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="-6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@mipmap/ic_launcher" />


</androidx.constraintlayout.widget.ConstraintLayout>